@model DrinkCatalog.Data.Models.Brand

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">Создать бренд</h2>
            </div>
        </div>
    </div>


    <form method="post">
        <div class="border p-3 mt-4">
            @*<div asp-validation-summary="All"></div>  отображение всех ошибок в одном месте *@
            <div class="mb-3 row">
                <label asp-for="Name" class="p-1 text-dark"></label>
                <input asp-for="Name" class="form-control"></input>
                <span asp-validation-for="Name" class="text-bg-secondary"></span>
            </div>
            <div class="d-flex justify-content-between">
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-warning w-75 form-control">
                        Назад
                    </a>
                    <button type="submit" class="btn btn-success w-75 form-control"> Создать </button>
            </div>
        </div>

    </form>
</div>
