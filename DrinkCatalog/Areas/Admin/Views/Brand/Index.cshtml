@model List<DrinkCatalog.Data.Models.Brand>
@{
    ViewData["Title"] = "Список брендов";
}

<body>
    <div class="container mt-4">
        <h2>@ViewData["Title"]</h2>

    </div>


<div class="card shadow-sm border-0 ">

    <div class="card-body p-4">
        <div class="row mb-4">
            <div class="col-md-6">
                <!-- Optionally add something here if needed -->
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Brand" asp-action="CreateBrand" class="btn btn-info"> Создать новый брэнд</a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Бренд</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var brand in Model.OrderBy(u => u.BrandId))
                {
                    <tr>
                            <td><h5>@brand.Name</h5></td>
                        <td>
                                <a asp-action="EditBrand" asp-route-id="@brand.BrandId" class="btn btn-warning btn-sm w-75">
                                    <i class="bi bi-pencil"></i> Редактировать
                                </a>
                                <a asp-action="DeleteBrand" asp-route-id="@brand.BrandId" class="btn btn-danger btn-sm w-75 mt-2">
                                    <i class="bi bi-trash"></i> Удалить
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>
