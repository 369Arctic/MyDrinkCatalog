@model DrinkCatalog.Data.Models.Coin

<div class="card-header bg-info-subtle py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-dark py-2">Редактировать монету</h2>
        </div>
    </div>
</div>


<div class="card shadow-sm p-4">
    <form asp-action="EditCoin" method="post">
        <input asp-for="Id" hidden></input>

        <div class="col-md-12">
            <div class="mb-3">
                <label for="denomination">Номинал монеты:</label>
                <input type="number" class="form-control" asp-for="Denomination" readonly />
                <span asp-validation-for="Denomination" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="mb-3">
                <label for="count">Количество:</label>
                <input type="number" class="form-control" asp-for="Count" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-controller="Coin" asp-action="Index" class="btn btn-warning w-75 shadow-sm">Назад</a>
            <button type="submit" class="btn btn-success w-75 shadow-sm">Обновить</button>
        </div>
    </form>

</div>