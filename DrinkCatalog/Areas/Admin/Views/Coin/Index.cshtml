@{
    ViewData["Title"] = "Список монет";
}


<h2>Список монет в системе</h2>

@* <div class="col-md-12 text-end mt-3">
    <a class="btn btn-primary" asp-action="AddCoin">Добавить монету</a>
</div>
 *@
<table class="table table-striped table-bordered text-dark mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Номинал</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coin in Model)
        {
            <tr>
                <td><h5>@coin.Denomination рублей</h5></td>
                <td><h5>@coin.Count</h5></td>
                <td>
                    <a asp-action="EditCoin" asp-route-id="@coin.Id" class="btn btn-warning">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>


