@model DrinkCatalog.Data.Models.Drink

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger-subtle ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Удалить напиток</h2>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="mb-3 row">
                <label asp-for="Name" class="p-1 text-dark"></label>
                <input asp-for="Name" disabled class="form-control"></input>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price" class="p-1 text-dark"></label>
                <input asp-for="Price" disabled class="form-control"></input>
            </div>
            <div class="mb-3 row">
                <label asp-for="Quantity" class="p-1 text-dark"></label>
                <input asp-for="Quantity" disabled class="form-control"></input>
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <a asp-controller="Drink" asp-action="Index" class="btn btn-warning w-75">Назад</a>
            <button type="submit" class="btn btn-danger w-75">Удалить</button>
        </div>
    </form>
</div>
