@model IEnumerable<DrinkCatalog.Data.Models.Drink>

@{
    ViewData["Title"] = "Товары";
}

<h1>Товары</h1>

<!-- Форма для импорта Excel-файла -->
@using (Html.BeginForm("ImportDrinks", "Drink", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="file">Выберите файл для загрузки</label>
        <input type="file" id="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Импортировать</button>
}

<div class="col-md-12 text-end">
    <a asp-controller="Drink" asp-action="CreateDrink" class="btn btn-info"> Создать новый напиток</a>
</div>
<!-- Таблица для отображения товаров -->
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Количество</th>
            <th>Бренд</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drink in Model)
        {
            <tr>
                <td>@drink.Name</td>
                <td>@drink.Price</td>
                <td>@drink.Quantity</td>
                <td>@drink.Brand.Name</td>
                <td>
                    <a asp-controller="Drink" asp-action="EditDrink" asp-route-id="@drink.DrinkId" class="btn btn-warning w-75"> Редактировать напиток</a>
                    <a asp-controller="Drink" asp-action="DeleteDrink" asp-route-id="@drink.DrinkId" class="btn btn-danger w-75"> Удалить напиток</a>
                </td>
            </tr>
        }
    </tbody>
</table>
